<body>
  <div class="box">
    <h1>ðŸ§  SÃ¶zcÃ¼k AvÄ±</h1>

    <div>
      <input type="text" id="harf" maxlength="1" placeholder="Bir harf girin">
      <button onclick="ara()">Ara</button>
    </div>

    <h2>SonuÃ§lar</h2>
    <ul id="sonuc"></ul>

    <hr>

    <h3>Yeni Kelime Ekle</h3>
    <input type="text" id="yeniKelime" placeholder="Kelime yazÄ±n">
    <button onclick="ekle()">Ekle</button>
  </div>

  <script>
    let kelimeler = ["elma", "armut", "masa", "kedi", "kÃ¶pek"];

    function ara() {
      const harf = document.getElementById("harf").value.toLowerCase();
      const liste = document.getElementById("sonuc");
      liste.innerHTML = "";

      if (!harf) return;

      const sonuc = kelimeler.filter(k => k.includes(harf));
      sonuc.forEach(k => {
        const li = document.createElement("li");
        li.textContent = k;
        liste.appendChild(li);
      });
    }

    function ekle() {
      const yeni = document.getElementById("yeniKelime").value.toLowerCase().trim();
      if (yeni && !kelimeler.includes(yeni)) {
        kelimeler.push(yeni);
        alert(`"${yeni}" kelimesi eklendi!`);
        document.getElementById("yeniKelime").value = "";
      }
    }
  </script>
